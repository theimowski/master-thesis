@using RazorEngine.Templating
@using MusicStore
@inherits MyTemplate<View.AlbumDetails>
@{
    Layout = "layout";
}
<h2>@Model.Album.Title</h2>

<p>
    <img alt="@Model.Album.Title" src="/placeholder.gif" />
</p>

<div id="album-details">
    <p>
        <em>Genre:</em>
        @Model.Album.Genre
    </p>
    <p>
        <em>Artist:</em>
        @Model.Album.Artist
    </p>
    <p>
        <em>Price:</em>
        @Model.Album.Price
    </p>
</div>
